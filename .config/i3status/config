#order += "ipv6"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "load"
order += "tztime local"

wireless _first_ {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
        separator_block_width = 20
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
        separator_block_width = 20
}

tztime local {
    format = "%b.%m %I:%M"
    separator_block_width = 20
}

#tztime local {
#        format = "%Y-%m-%d %H:%M:%S"
#}

load {
        format = "%1min"
        
        separator_block_width = 20
}

disk "/" {
        separator_block_width = 20
        format = "%avail/%total"
        
}
